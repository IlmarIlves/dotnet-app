@page "/calendar"
@model dotnet_app.Pages.Calendar

@{
    Layout = null;
}

<style>
.container {
    max-width: 800px;
    margin: 0 auto;
    }

header {
    background-color: #4285f4;
    color: white;
    padding: 20px;
}

.event-details {
    margin: 50px;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 10px;
}

.details-row {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.details-label {
    font-weight: bold;
    width: 120px;
}

.details-value {
    flex: 1;
}

</style>

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
            <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js'></script>
            <script>

                document.addEventListener('DOMContentLoaded', function() {
                    var calendarEl = document.getElementById('calendar');
                    var calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth'
                    });
                    calendar.render();
                });

            </script>
    </head>
    <body>
        <div id="calendar"></div>
    </body>
</html>


