@page "/"
@model dotnet_app.Pages.Index

@{
    ViewData["Title"] = "Home page";
}

@if (User.Identity.IsAuthenticated)
{
    <p>Welcome, @User.Identity.Name!</p>
    @* <form method="post" asp-page-handler="logout" class="form-inline">
        <button type="submit" class="btn btn-link">Logout</button>
    </form> *@

     <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/messager">Messager</a></li>
            <li><a href="/calendar">Calendar</a></li>
        </ul>
    </nav>
}
else
{
    <form id="login-form" asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
}

@section Scripts {
    <script>
        $(function () {
            $('#login-form').on('submit', function (e) {
                e.preventDefault(); // prevent default form submission
                var formData = $(this).serialize(); // serialize form data
                $.ajax({
                    type: 'POST',
                    url: '/Account/login', // URL to server action method
                    data: formData, // data to send to the server
                    success: function () {
                        // redirect to another page on success
                        window.location.href = '/';
                    },
                    error: function (xhr) {
                        // display error message
                        alert(xhr.responseText);
                    }
                });
            });
        });
    </script>
}
